{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCommentaire</th>
                <th>IdArticle</th>
                <th>ContentCommentaire</th>
                <th>DateCommentaire</th>
                <th>NbLikesCommentaire</th>
                <th>EtatCommentaire</th>
                <th>IdUser</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.idCommentaire }}</td>
                <td>{{ commentaire.idArticle }}</td>
                <td>{{ commentaire.contentCommentaire }}</td>
                <td>{{ commentaire.dateCommentaire ? commentaire.dateCommentaire|date('Y-m-d') : '' }}</td>
                <td>{{ commentaire.nbLikesCommentaire }}</td>
                <td>{{ commentaire.etatCommentaire ? 'Yes' : 'No' }}</td>
                <td>{{ commentaire.idUser }}</td>
                <td>
                    <a href="{{ path('app_commentaire_show', {'idCommentaire': commentaire.idCommentaire}) }}">show</a>
                    <a href="{{ path('app_commentaire_edit', {'idCommentaire': commentaire.idCommentaire}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_commentaire_new') }}">Create new</a>
{% endblock %}
