<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.5/index.global.min.js'></script>
    <script>

      document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
          initialView: 'dayGridMonth',
          headerToolbar: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek,timeGridDay'
          },
          navLinks: true,
          selectable: true,
          selectMirror: true,
          select: function(info) {
            var title = prompt('Event Title:');
            if (title) {
              calendar.addEvent({
                title: title,
                start: info.startStr,
                end: info.endStr,
                allDay: info.allDay
              });
            }
            calendar.unselect();
          },
          eventClick: function(info) {
            var confirmDelete = confirm("Are you sure you want to delete this event?");
            if (confirmDelete) {
              info.event.remove();
            }
          },
          editable: true,
          eventDrop: function(info) {
            var title = info.event.title;
            var start = info.event.start.toISOString();
            alert(title + ' was dropped on ' + start);
            // You can make an AJAX request to update the event in the database here
          },
          eventResize: function(info) {
            var title = info.event.title;
            var start = info.event.start.toISOString();
            var end = info.event.end.toISOString();
            alert(title + ' was resized from ' + start + ' to ' + end);
            // You can make an AJAX request to update the event in the database here
          }
        });
        calendar.render();
      });
    </script>
  </head>
  <body>
    <div id='calendar'></div>
    
    <div id='calendar'></div>
 
  </body>
</html>





