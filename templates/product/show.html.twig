{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ product.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.prix }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ product.img }}</td>
            </tr>
            <tr>
                <th>Categ</th>
                <td>{{ product.categ }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ product.user }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ product.url }}</td>
            </tr>
            <tr>
                <th>Date_ajout</th>
                <td>{{ product.dateAjout ? product.dateAjout|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_achat</th>
                <td>{{ product.dateAchat ? product.dateAchat|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
