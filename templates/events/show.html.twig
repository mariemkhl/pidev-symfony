{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <h1>Events</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdEvent</th>
                <td>{{ event.idEvent }}</td>
            </tr>
            <tr>
                <th>Name Event</th>
                <td>{{ event.nameev }}</td>
            </tr>
            <tr>
                <th>Date </th>
                <td>{{ event.dateEvent ? event.dateEvent|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ event.location }}</td>
            </tr>
            <tr>
                <th>IdUser</th>
                <td>{{ event.idUser }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ event.categorie }}</td>
            </tr>
            <tr>
                <th>Numbre of Places</th>
                <td>{{ event.nbplacetotal }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ event.img }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_events_index') }}">back to list</a>

    <a href="{{ path('app_events_edit', {'idEvent': event.idEvent}) }}">edit</a>

    {{ include('events/_delete_form.html.twig') }}
{% endblock %}
