{% extends 'base.html.twig' %}

{% block title %}Events List {% endblock %}

{% block body %}
   <h3></h3>

       <style>
     .card {
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 10px;
 
}

.card:hover {
    box-shadow: 0px 0px 10px #888;
}

.card-img-container {
    width: 100%; /* set the width to 100% to fill the card container */
    height: 300px;
    overflow: hidden;
    border-radius: 10px;
}
.card-img-container img {
    width: 100%;
    height: 150%; /* set the height to 100% to fill the container and maintain aspect ratio */
    object-fit: cover; /* use object-fit to prevent the image from stretching or squishing */
}
.btn-warning {
  background-color: #FF8C00; /* Replace with your preferred shade of dark orange */
  border-color: #FF8C00; /* Set the border color to match the background color */
  border-radius: 15px;
   width:25%;
      margin: 15px 30px ; 
}


    </style>


<div class="row row-cols-1 row-cols-md-3 g-4">
    {% for event in pagination %}
  
         <div class="col">
            <div class="card h-100 shadow-sm">
            <div class="card">
                <div class="card-img-container">
                     <img src="{{asset('images/events/' ~ event.img )}}" class="card-img-top" alt="{{ event.nameev }}">
                </div>
                
                <div class="card-body">
                    <h5 class="card-title">{{ event.nameev}}</h5>
                     <p class="card-text">{{ event.description|slice(0, 90) ~ '...' }}</p>
                </div>
               <ul class="list-group list-group-flush">
                    <li class="list-group-item">Location: {{ event.location }}</li>
                    <li class="list-group-item">Category: {{ event.categorie }}</li>
                    <li class="list-group-item"><span class="date"><i class="fas fa-calendar"></i> {{ event.dateEvent|date('Y-m-d')}}</span></li>
                </ul>
								

                  <div class="card-footer">
                    <small class="text-muted">Places: {{ event.nbplacetotal }} place</small>
                    <a href="{{ path('app_events_show', {'idEvent': event.idEvent}) }}" class="btn btn-warning">See More</a>
                      <a href="{{ path('app_events_edit', {'idEvent': event.idEvent}) }}" class="btn btn-warning">edit</a>
                </div>
        

    </div>
    </div>
    </div>


     {% else %}
        <div class="col">
            <div class="card h-100">
                <div class="card-body">
                    <p class="card-text">no event found.</p>
                </div>
            </div>
        </div>
    {% endfor %}


</div>
     <div class=' pagination page-item page-link'>
			{{ knp_pagination_render(pagination) }}
				</div> 
     <div class="col-md-12 text-center">
    <a href="{{ path('app_events_new') }}"  class="btn btn-warning">Create new</a>
</div>
    
{% endblock %}
