{% extends 'back.html.twig' %}

{% block body %}
<style> 
.article-image {
  width: 200px;
  height: 200px;
  object-fit: cover; /* This will crop the image if it's not the same aspect ratio as the container */
}

</style>
<canvas id="myChart"></canvas>
<input type="text" id="search" class="form-control" placeholder="Search">
    <main class="content">
        <div class="container-fluid p-0">
            <h1>Articles</h1>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Image</th>
                            <th scope="col">Title</th>
                            <th scope="col">Content</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                            <tr>
                                <td>{{ article.idArticle }}</td>
                                <td>  <img src="{{ asset('uploads/images/' ~ article.imageArticle) }}" class="article-image img-fluid" alt="{{ article.titreArticle }}"></td>
                                <td>{{ article.titreArticle }}</td>
                                <td>{{ article.contentArticle }}</td>
                                <td>
                                    
                                    <a href="{{ path('app_article_editback', {'idArticle': article.idArticle}) }}" class="btn btn-secondary btn-sm btn-block">Edit </a>

                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">No records found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            
<div class="d-flex justify-content-between">

  
    <a href="{{ path('app_article_newback') }}" class="btn btn-primary">New Article</a>
</div>

            <div class="d-flex justify-content-center my-4">
                {{ knp_pagination_render(articles) }}
            </div>
        </div>
    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $("#search").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("table tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $("#search").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("table tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
<script>
    // Get the counts data from PHP
    const counts = {{ counts|json_encode|raw }};

    // Get the canvas element and create the chart
    const canvas = document.getElementById('myChart').getContext('2d');
    const chart = new Chart(canvas, {
        type: 'bar',
        data: {
            labels: Object.keys(counts),
            datasets: [{
                label: 'Counts',
                data: Object.values(counts),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });
</script>
{% endblock %}
