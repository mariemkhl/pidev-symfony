{% extends 'back.html.twig' %}

{% block body %}

 <input type="text" id="search" class="form-control" placeholder="Search">
    <main class="content">
        <div class="container-fluid p-0">
            <h1>Reservations</h1>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nme</th>
                            <th scope="col">Event</th>
                            <th scope="col">User</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for reservation in pagination %}
                            <tr>
                                <td>{{ reservation.idRes }}</td>
                                <td>{{ reservation.name }}</td>
                                <td>{{ reservation.idEvent }}</td>
                                <td>{{ reservation.idUser }}</td>
                             
                                
                                <td>
                    <a href="{{ path('app_reservations_deleteback', {'idRes': reservation.idRes}) }}" class="btn btn-secondary btn-sm btn-block" on>Delete</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">No records found.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            

</div>
 <div class=' pagination page-item page-link'>
									{{ knp_pagination_render(pagination) }}
								</div> 

            
               
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function(){
        $("#search").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("table tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

        </div>
    </main>
{% endblock %}