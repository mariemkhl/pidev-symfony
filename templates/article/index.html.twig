{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1> </h1>

    <style>
       .card {
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    margin-bottom: 20px;
}

.card:hover {
    box-shadow: 0px 0px 10px #888;
}

    </style>

    <div class="card-columns">
        {% for article in articles %}
            <div class="card">
                <img src="{{asset('uploads/images/' ~ article.imageArticle)}}" class="card-img-top" alt="{{ article.titreArticle }}">
                <div class="card-body">
                    <h5 class="card-title">{{ article.titreArticle }}</h5>
                    <p class="card-text">{{ article.contentArticle }}</p>
                    <a href="{{ path('app_article_show', {'idArticle': article.idArticle}) }}" class="btn btn-primary">Read more</a>
                    <a href="{{ path('app_article_edit', {'idArticle': article.idArticle}) }}" class="btn btn-secondary">Edit</a>
                    

                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="card-body">
                    <p class="card-text">No records found.</p>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="row">
				<div class="container">
					<div class="row">
						<div class="col-lg-12 text-center">
							<div class="pagination-wrap">
								<ul>
									<li><a href="#">Prev</a></li>
									<li><a href="#">1</a></li>
									<li><a class="active" href="#">2</a></li>
									<li><a href="#">3</a></li>
									<li><a href="#">Next</a></li>
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>


    <a href="{{ path('app_article_new') }}" class="btn btn-primary">Create new</a>
    

{% endblock %}
