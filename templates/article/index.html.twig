{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}



{% block body %}

    {%block PreLoader %}
     <div class="loader">
        <div class="loader-inner">
            <div class="circle"></div>
        </div>
     </div>
    {% endblock %}
    <h1>  </h1>

    <style>
       .card {
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 20px;
    margin-bottom: 20px;
    width: 351.5px;
    height: 450px;
     margin-right: auto;
    margin-left: auto;
}


.card:hover {
    box-shadow: 0px 0px 30px #888;
}

.card-img-container {
    width: 350px; /* set the desired width */
    height: 200px; /* set the desired height */
    overflow: hidden; /* hide any overflow if the image is larger than the container */
    border-radius: 20px;
}
.card-img-container img {
    width: 100%; /* set the image width to 100% to fill the container */
    height: auto; /* set the image height to auto to maintain aspect ratio */
}

 .form-control {
        border-radius: 20px;
        border: none;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        {# padding: 15px; #}
        {# font-size: 20px; #}
    }
     
    .btn {
        border-radius: 20px;
        border: none;
        padding: 5px 15px;
        font-size: 16px;
        font-weight: bold;
        background-color: #007bff;
        color: #fff;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        transition: background-color 0.2s ease-in-out;
    }
    
    .btn:hover {
        background-color: #0062cc;
    }
    .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 50px;
}

.form-group {
    margin-bottom: 30px;
}



    </style>

    


  



     <div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <form method="get" action="{{ path('app_article_search') }}">
                <div class="input-group mb-3">
                    <input class="form-control" type="search" placeholder="Search articles" aria-label="Search" name="q">
                    
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <form method="get" action="{{ path('app_article_category') }}">
                <div class="input-group mb-3">
                    <select class="form-control mr-sm-2" name="categoryArticle">
                        <option value="">-- Select a category --</option>
                        <option value="">All</option>
                        <option value="Graffiti/Street Art">Graffiti/Street Art</option>
                        <option value="Street Art">Street Art</option>
                        <option value="Art History">Art History</option>
                        <!-- Add more options as needed -->
                    </select>
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Filter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



